<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ClubbingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kapitel_club"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_kapitel_club" />

        <TextView
            style="@style/GeneralTextViewBoxAllPadding"
            android:text="@string/intro_kapitel" />

        <Button
            android:id="@+id/button_kapitel_sound_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_extra"
            android:layout_marginBottom="@dimen/padding_extra"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Play Sound" />

        <View style="@style/SeperatorWithPadding" />

        <ImageView
            android:id="@+id/dutheatre_club"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_dutheatre_club" />

        <TextView
            style="@style/GeneralTextViewBoxAllPadding"
            android:text="@string/intro_dutheatre" />

        <Button
            android:id="@+id/button_dutheatre_sound_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_extra"
            android:layout_marginBottom="@dimen/padding_extra"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Play Sound" />

        <View style="@style/SeperatorWithPadding" />

        <ImageView
            android:id="@+id/leciel_club"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_leciel_club" />

        <TextView
            style="@style/GeneralTextViewBoxAllPadding"
            android:text="@string/intro_leciel" />

        <Button
            android:id="@+id/button_leciel_sound_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_extra"
            android:layout_marginBottom="@dimen/padding_extra"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Play Sound Sample" />

    </LinearLayout>
</ScrollView>